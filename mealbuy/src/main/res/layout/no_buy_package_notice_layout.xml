<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="@dimen/x600"
        android:layout_height="@dimen/x586"
        android:layout_centerInParent="true"
        android:background="@mipmap/no_device_buy_package"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x44"
            android:layout_marginTop="@dimen/x288"
            android:gravity="center_vertical"
            android:text="无法使用该功能"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/x36" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x34"
            android:gravity="center_vertical"
            android:text="当前设备未购买套餐"
            android:textColor="#4D4D4D"
            android:textSize="@dimen/x32" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x80"
            android:layout_marginTop="@dimen/x48"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/know"
                android:layout_width="@dimen/x240"
                android:layout_height="match_parent"
                android:background="@drawable/know_shape"
                android:gravity="center"
                android:text="知道了"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/x34" />

            <LinearLayout
                android:id="@+id/buy_package"
                android:layout_width="@dimen/x240"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x32"
                android:background="@drawable/buy_package_shape"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="购买套餐"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x32" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/no_device_buy_package_more" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>