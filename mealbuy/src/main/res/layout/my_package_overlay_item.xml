<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/x400"
    android:layout_height="wrap_content"
    android:background="@drawable/overlay_pack_bg_shape"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/meal_type_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginTop="@dimen/x28"
            android:text="流量(M)"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/x24" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:background="@drawable/overlay_pack_shape"
            android:paddingBottom="@dimen/x2"
            android:paddingLeft="@dimen/x12"
            android:paddingRight="@dimen/x12"
            android:paddingTop="@dimen/x4"
            android:text="购买叠加包"
            android:textColor="@color/white"
            android:textSize="@dimen/x20" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x4"
        android:layout_marginTop="@dimen/x20"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x28">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="剩余"
                android:textColor="#757575"
                android:textSize="@dimen/x20" />

            <TextView
                android:id="@+id/remain_meal_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1024"
                android:textColor="#212121"
                android:textSize="@dimen/x28" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="总量"
                android:textColor="#757575"
                android:textSize="@dimen/x20" />

            <TextView
                android:id="@+id/all_meal_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="2048"
                android:textColor="#4D4D4D"
                android:textSize="@dimen/x24" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="已用"
                android:textColor="#757575"
                android:textSize="@dimen/x20" />

            <TextView
                android:id="@+id/have_user_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="500"
                android:textColor="#212121"
                android:textSize="@dimen/x28" />
        </LinearLayout>
    </RelativeLayout>

    <ProgressBar
        android:id="@+id/meal_detail_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x12"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginRight="@dimen/x28"
        android:progress="45"
        android:progressDrawable="@drawable/progress_bg" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x20"
        android:layout_marginTop="@dimen/x4"
        android:paddingLeft="@dimen/x30"
        android:paddingRight="@dimen/x28">

        <TextView
            android:id="@+id/have_use_percent_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="10%"
            android:textColor="#212121"
            android:textSize="@dimen/x24" />

        <TextView
            android:id="@+id/remain_percent_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="80%"
            android:textColor="#212121"
            android:textSize="@dimen/x24" />
    </RelativeLayout>
</LinearLayout>